<!DOCTYPE html>
<html>
<head>
  <title>RapDuel</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="rap-duel">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
    </div>
  </div>
  <div class="page-header">
    <h1>Rap Duel</h1>
  </div>
  <div ng-repeat="user in users">
    <!-- <p>{{users}}</p> -->
    <br>
    <a ui-sref="user">{{user.rap_name}}</a>
    <br>
    <img ng-src="{{user.image_url}}" />
    <br>
    City: {{user.city}}
    <br>
    Description: {{user.description}}
    <br>
  </div>
  <!-- <span ng-hide="user.title">
  {{user.rap_name}}
  <span> -->
  <br>
  <form ng-submit="addUser()">
    <input type="text" placeholder="Rap Name" ng-model="rap_name" />
    <br>
    <input type="text" placeholder="Photo" ng-model="image_url" />
    <br>
    <input type="text" placeholder="City" ng-model="city" />
    <br>
    <input type="text" placeholder="Description" ng-model="description" />
    <br>
    <button type="submit">New Rapper</button>
  </form>
  <div class="page-header">
    <h3>
      {{user.rap_name}}
    </h3>
  </div>

  <div ng-repeat="battle in battle.users">
    <span>
      <a href="#/users/{{$index}}">Battles</a>
    </span>
    <span style="font-size:20px; margin-left:10px;">
      {{battle.title}}
    </span>
  </div>
  <form ng-submit="addBattle()"
  style="margin-top:30px;">
  <h3>Battles</h3>
  <div class="form-group">
    <input type="text"
    class="form-control"
    placeholder="Battle Name"
    ng-model="title" />
    <input type="text"
    class="form-control"
    placeholder="Challenger"
    ng-model="challenger_name" />
    <input type="text"
    class="form-control"
    placeholder="Challenger Diss"
    ng-model="audio1_Url" />
    <input type="text"
    class="form-control"
    placeholder="Response"
    ng-model="audio2_Url" />
  </div>
  <button type="submit" class="btn btn-primary">Battle!</button>
</form>
<!-- replacing the yield statement because I'm rendering the same layout for the angular app -->
</body>
</html>
